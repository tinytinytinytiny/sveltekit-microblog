{
	"button": {
		"primary": {
			"background": {
				"default": "var(--color-amber-300)",
				"focus": "var(--color-amber-100)"
			},
			"shading": "var(--color-amber-600)"
		},
		"secondary": {
			"background": {
				"default": "var(--color-slate-300)",
				"focus": "var(--color-amber-100)"
			},
			"shading": "var(--color-slate-400)"
		}
	},
	"header": {
		"color": "var(--color-slate-500)",
		"underline-color": "var(--color-slate-400)"
	},
	"input": {
		"background": "var(--color-slate-50)",
		"border-color": "var(--color-slate-400)",
		"placeholder-color": "var(--color-slate-500)",
		"shading": "var(--color-slate-300)"
	},
	"link": {
		"background": {
			"focus": "var(--color-amber-200)"
		},
		"color": {
			"default": "var(--color-blue-700)",
			"hover": "var(--color-blue-900)"
		},
		"underline-thickness": {
			"default": "2px",
			"focus": "3px"
		}
	},
	"post": {
		"background": {
			"hover": "var(--color-slate-200)",
			"focus": "var(--color-amber-100)"
		}
	},
	"separator": {
		"border-color": "var(--color-slate-300)"
	}
}